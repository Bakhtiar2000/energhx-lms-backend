generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      UserRole
  status    Status   @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Address {
  id           String @id @default(uuid())
  streetNumber Int
  street       String
  city         String
  postalCode   Int
  province     String
  country      String

  developer   Developer? @relation(fields: [developerId], references: [id])
  developerId String?    @unique
}

model Experience {
  id        String   @id @default(uuid())
  name      String
  documents String[]
}

model Developer {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  imageUrl  String 
  gender    Gender
  mail      String
  phone     String 
  address   Address?
}

enum UserRole {
  SERVER
  DEVELOPER
}

enum Status {
  BLOCKED
  ACTIVE
  DELETED
}

enum Gender {
  MALE
  FEMALE
}
